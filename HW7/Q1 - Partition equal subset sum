class Solution:
    def canPartition(self, nums: List[int]) -> bool:
        total = sum(nums)
        
        # If total sum is odd, we cannot split into two equal subsets
        if total % 2 != 0:
            return False
        
        target = total // 2
        
        # dp[s] = True if we can make sum s using some subset of nums
        dp = [False] * (target + 1)
        dp[0] = True  # We can always make sum 0 (by choosing nothing)
        
        for num in nums:
            # Traverse backwards so we don't reuse the same number multiple times
            for s in range(target, num - 1, -1):
                if dp[s - num]:
                    dp[s] = True
        
        return dp[target]
