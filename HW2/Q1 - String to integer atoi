class Solution:
    def reverse(self, x: int) -> int:
        # Define the 32-bit integer limits
        INT_MIN, INT_MAX = -2**31, 2**31 - 1
        
        # Extract the sign of x (1 for positive, -1 for negative)
        sign = -1 if x < 0 else 1
        
        # Work with the absolute value of x
        x = abs(x)
        
        # Reverse the digits using string slicing
        reversed_x = int(str(x)[::-1])
        
        # Restore the sign
        reversed_x *= sign
        
        # Check for overflow (if outside 32-bit signed range)
        if reversed_x < INT_MIN or reversed_x > INT_MAX:
            return 0
        
        return reversed_x
